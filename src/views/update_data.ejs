  <body>
    <%- include('partials/navbar.ejs') %>
    <br /><br /><br /><br /><br />
    <form class="form2" method="POST" action="/update">
      <div class="form-group">
        <label >Hospital Name: <label name="name"><%=name%></label></label>
      </div>
      <div class="form-group">
        <label >Registration ID: <label name="code"><%=code%></label></label>
      </div>
      <div class="form-group">
        <label >Total Beds: <label name="total"><%=total%></label></label>
      </div>
      <div class="form-group">
          <label >Available Beds: <label name="avail"><%=avail%></label></label>
      </div>
      <div class="form-group">
          <label >Available Beds:</label>
          <input
          class="form-control"
          name="updated_value"
          id="updated_value"
          aria-describedby="emailHelp"
        />
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
    </div>
    <br /><br /><br /><br />
    <br /><br /><br /><br />
    <br /><br /><br />
    <%- include('partials/footer.ejs')%>
